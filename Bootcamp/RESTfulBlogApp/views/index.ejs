<% include ./partials/header %>

<div class="ui main text container">
	<% blogs.forEach(function(blog){ %>
		<div class="ui text container segment">
			<h2><%= blog.title %></h2>
			<img src="<%= blog.image %>" class="ui centered image">
			<span><em><%= blog.created.toDateString() %></em></span>
			<p><%- blog.body.substring(0, 100) %> ...</p>
			<a href="/blogs/<%= blog._id %>" class="ui floated inverted violet button">Read More &nbsp; <span style="font-size: 15px;">&gt;</span></a>
		</div>
	<% }) %>
</div>

<% include ./partials/footer %>