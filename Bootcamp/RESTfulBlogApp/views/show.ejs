<% include ./partials/header %>

<div class="ui main text container segment">
	<div class="ui huge header">
		<%= blog.title %>
	</div><br>
	<div class="ui top attached">
		<div class="item">
			<img src="<%= blog.image %>" class="ui centered rounded image">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div><br>
			<div class="description">
				<p><%- blog.body %></p>
			</div>
			<br>
			<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
				<button class="ui red inverted button">Delete Post</button>
			</form>
			<a href="/blogs/<%= blog._id %>/edit" class="ui orange inverted button">Edit Post</a>
		</div>
	</div>
</div>

<% include ./partials/header %>